{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Application (DEBUG)",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": [
        "${workspaceFolder}/index.ts" // ← 진입점 파일
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "dev"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Application (PROD)",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": [
        "${workspaceFolder}/index.ts" // ← 진입점 파일
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "prod"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
